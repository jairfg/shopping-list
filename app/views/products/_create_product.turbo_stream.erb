<%= render partial: "show_message"%>
<% if new_date %>
  <%= turbo_stream.update "list_products"  do %>
    <%= render partial: "products" %>
  <% end %>
<% else %>
  <%= turbo_stream.append "body-#{product.purchase_date}" do %>
    <%= render(ProductCardComponent.new(product)) %>
  <% end %>
<% end %>